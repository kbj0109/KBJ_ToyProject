<Window x:Class="KBJ_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KBJ_Game"
        mc:Ignorable="d"
        Title="새 사냥 게임" Height="170" Width="270" Topmost="True" ResizeMode="NoResize" Background="Beige">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Margin="50 0 10 0" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Grid.Row="0" Grid.Column="0" FontSize="14">사용할 아이디를 입력하세요.</Label>
        <TextBox x:Name="textBoxID" Margin="50 10 0 0" MaxLength="9" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Width="100" Height="25" FontSize="14" KeyDown="textBoxID_KeyDown"></TextBox>
        <Button x:Name="buttonConfirm" Margin="10" Grid.Row="1" Grid.Column="1" Content="확 인" VerticalAlignment="Top" Width="50" Height="25" FontSize="14" Click="buttonConfirm_Click"/>
    </Grid>
</Window>
